* {
    font-family: "Vazirmatn", "Segoe UI";
    color: #1f2933;
}
QWidget {
    background: #f5f5f5;
}
QPushButton {
    background: #4caf50;
    color: white;
    border-radius: 10px;
    padding: 8px 14px;
}
QPushButton:hover { background: #43a047; }
QLineEdit, QTextEdit, QComboBox {
    border: 1px solid #cfd8dc;
    border-radius: 10px;
    padding: 8px;
    background: white;
}
QLabel {
    font-size: 14px;
}
#SidebarButton {
    background: #eceff1;
    color: #37474f;
}
